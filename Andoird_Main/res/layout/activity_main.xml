<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#40C4FF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/operatText"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/firstN"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/firstN"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:inputType="numberSigned|numberDecimal"
        android:maxLength="4"
        android:padding="5dp"
        android:text="0"
        android:textColorHighlight="#F90101"
        android:textColorLink="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resutlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:ems="4"
        android:gravity="center"
        android:maxLength="7"
        android:padding="5dp"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="5dp"
        android:text="="
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/secondN"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/secondN"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center"
        android:inputType="numberSigned|numberDecimal"
        android:maxLength="4"
        android:padding="5dp"
        android:text="0"
        android:textColorHighlight="#FF0000"
        android:textColorLink="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/operatText"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:alpha="1"
        android:background="#00448AFF"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secondN">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/btnC"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:onClick="click"
                android:text="C"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#7C4DFF" />

            <Button
                android:id="@+id/btn7"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="@drawable/rectangle_button"
                android:onClick="click"
                android:text="7"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#448AFF" />

            <Button
                android:id="@+id/btn4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_button"
                android:onClick="click"
                android:text="4"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#448AFF" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_button"
                android:onClick="click"
                android:text="1"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#448AFF" />

            <Button
                android:id="@+id/btnEx"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_button"
                android:text="-"
                android:textColor="#000000"
                android:textSize="20sp"
                app:backgroundTint="#448AFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/btnCe"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:onClick="click"
                android:text="Ce"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#7C4DFF" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="@drawable/rectangle_button"
                android:onClick="click"
                android:text="8"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#448AFF" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_button"
                android:onClick="click"
                android:text="5"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#448AFF" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_button"
                android:onClick="click"
                android:text="2"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#448AFF" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_button"
                android:onClick="click"
                android:text="0"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#448AFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/btnReminder"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:onClick="click"
                android:text="%"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#7C4DFF" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="@drawable/rectangle_button"
                android:onClick="click"
                android:text="9"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#448AFF" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_button"
                android:onClick="click"
                android:text="6"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#448AFF" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_button"
                android:onClick="click"
                android:text="3"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#448AFF" />

            <Button
                android:id="@+id/btnFullStop"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle_button"
                android:onClick="click"
                android:text="."
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#448AFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_button"
                android:onClick="click"
                android:text="="
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#7C4DFF" />

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:background="@drawable/round_button"
                android:onClick="click"
                android:text="-"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#7C4DFF" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_button"
                android:onClick="click"
                android:text="+"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#7C4DFF" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_button"
                android:onClick="click"
                android:text="x"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#7C4DFF" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/round_button"
                android:onClick="click"
                android:text="/"
                android:textColor="#000000"
                android:textSize="15dp"
                app:backgroundTint="#7C4DFF" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>